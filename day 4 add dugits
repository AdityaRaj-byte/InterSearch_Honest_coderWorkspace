#include<iostream>
#include<cmath>
using namespace std;
int add_Digits(int num) {
        int sum=0;
        int k=num;
        int n=0;
        while(k>9){
            sum=0;
            n=log10 (k);
            for(int i=0;i<=n;i++){
                sum+=num%10;
                num/=10;}
            k=sum;
            num=sum;}
        return k;
            
        
    }


	
